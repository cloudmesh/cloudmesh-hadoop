<!-- Referred https://hadoop.apache.org/docs/stable/hadoop-project-dist/hadoop-common/ClusterSetup.html -->

<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
	<property>
		<name>dfs.namenode.name.dir</name>
		<value>./cloudmesh/images/hadoop/namenode/logs</value> 
		<final>true</final> 
	</property> 
    <property>
		<name>dfs.hosts</name>
		<final>true</final> 
	</property> 
	<property> 
		<name>dfs.blocksize</name>
		<value>268435456</value> 
		<final>true</final> 
	</property>
	<property> 
		<name>dfs.namenode.handler.count</name>
		<value>100</value> 
		<final>true</final> 
	</property>
	<property> 
		<name>dfs.datanode.data.dir</name>
		<value>./cloudmesh/images/hadoop/datanodeblocks</value> 
		<final>true</final> 
</configuration>